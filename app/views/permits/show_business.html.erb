<% @categories.each do |title, items| %>
<% @items = items %>

<div class="accordion">
	<%= link_to show_permits_path(@title) do %>
	<h3><%= title %></h3>
	<% end %>
	<div class="list-items">
	<p><%= PermitsController.permits_for(@items) %></p>
		<ul>
			<% items.each do |i| %>
			<li><%= i %></li>
			<% end %>
		</ul>
	</div>
</div>

<!-- LINE BREAK -->
<br>

<% end %>